{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"],
  "files": ["src/index.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
